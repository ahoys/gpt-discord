{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "es2015",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": ".",
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*",
    "./webpack.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}